{
  "manifest_version": 2,

  "name": "Nextnextnext",
  "description": "The best way to read webcomic archives: with keyboard shortcuts and preloading",
  "version": "1.0",
  "icons": {
    "128": "icon-128.png"
  },

  "permissions": [
    "<all_urls>"
  ],
  "commands": {
    "pager-next": {
      "suggested_key": {
        "default": "Ctrl+Period"
      },
      "description": "next page"
    },
    "pager-prev": {
      "suggested_key": {
        "default": "Ctrl+Comma"
      },
      "description": "previous page"
    }
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}
